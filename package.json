{
  "name": "batchpayments",
  "version": "1.0.0",
  "private": true,
  "description": "A batch payments solution for ethereum",
  "main": "",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:js": "standard || :",
