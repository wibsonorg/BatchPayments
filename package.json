    "coverage:report": "istanbul report html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ethereumjs-abi": "^0.6.5",
    "seedrandom": "^3.0.1",
    "solium": "^1.2.3",
    "truffle": "^4.1.15",
    "truffle-assertions": "^0.7.2"
  },
  "devDependencies": {
    "@0x/sol-coverage": "^3.0.2",
    "@0x/sol-trace": "^2.0.10",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "eth-gas-reporter": "^0.1.12",
    "ganache-cli": "^6.4.1",
    "istanbul": "^0.4.5",
    "solhint": "^2.0.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "globals": [
      "after",
      "assert",
      "before",
      "beforeEach",
      "contract",
      "describe",
      "it",
      "web3"
